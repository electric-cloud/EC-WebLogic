<editor>
  <help>https://docs.cloudbees.com/docs/cloudbees-cd/latest/plugins/ec-weblogic#CheckPageStatus</help>
  <formElement>
    <type>credential</type>
    <label>Credentials to be entered</label>
    <property>credentialName</property>
    <documentation>The required credentials to check the status of the page.</documentation>
    <required>0</required>
  </formElement>
  <formElement>
    <type>entry</type>
    <label>Maximum elapsed time</label>
    <property>maxelapsedtime</property>
    <documentation>Defines the maximum time, in seconds, that the job tries to check on the cluster. If left blank, there is no wait time and the URL is only checked once.</documentation>
    <required>0</required>
  </formElement>
  <formElement>
    <type>entry</type>
    <label>Target URL</label>
    <property>targeturl</property>
    <documentation>URL of the page to be checked.</documentation>
    <required>1</required>
  </formElement>
  <formElement>
    <type>select</type>
    <label>Success criteria</label>
    <property>successcriteria</property>
    <required>1</required>
    <documentation>Expected result when checking the server status.</documentation>
    <option><name>Page found (200)</name><value>pagefound</value></option>
    <option><name>Page not found (404)</name><value>pagenotfound</value></option>
    <option><name>Page error</name><value>pageerror</value></option>
  </formElement>
</editor>
