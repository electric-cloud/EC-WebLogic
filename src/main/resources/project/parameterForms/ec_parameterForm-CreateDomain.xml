<editor>
    <help>/commander/pages/@PLUGIN_NAME@/@PLUGIN_KEY@_help?s=Administration&amp;ss=Plugins#CreateDomain</help>
    <formElement>
        <type>entry</type>
        <label>WLST Absolute Path:</label>
        <property>wlst_abs_path</property>
        <required>1</required>
        <propertyReference type="property">/plugins/@PLUGIN_NAME@/project/weblogic_cfgs/$configname/wlst_path</propertyReference>
        <dependsOn>configname</dependsOn>
        <documentation>Absolute path to WLST. i.e: '/path/to/wlst.cmd' or 'wlst.sh'.</documentation>
    </formElement>
    <formElement>
        <type>entry</type>
        <label>Configuration Name:</label>
        <!-- Improvements for CEV-18687 -->
        <configuration>1</configuration>
        <!-- End of improvements for CEV-18687 -->
        <property>configname</property>
        <documentation>Name of the configuration to be used. URL, port and credentials are retrieved from the given configuration. To view or create a new configuration, go to the Administration -> Plugins tab, and select 'Configure' action for @PLUGIN_KEY@ plugin.</documentation>
        <htmlDocumentation>Name of the configuration to be used. URL, port and credentials are retrieved from the given configuration.<br/><br/>A Configuration defines connection details and can be created by going to plugin <a style="text-decoration: none !important; border-bottom-style: dashed; border-bottom-width: thin; font-size: inherit; color: inherit; font-family: inherit; border-color: #d8d8d8; border-spacing: 2px;" target="_blank" href="/commander/pages/@PLUGIN_NAME@/configurations">configuration page</a>.</htmlDocumentation>
        <required>1</required>
        <propertyReference>/plugins/@PLUGIN_NAME@/project/weblogic_cfgs</propertyReference>
    </formElement>
    <formElement>
        <type>credential</type>
        <label>User Credentials:</label>
        <property>user_credentials</property>
        <documentation>Credentials of the user(Username and password).</documentation>
        <required>1</required>
    </formElement>
    <formElement>
        <type>entry</type>
        <label>Domain Template:</label>
        <property>domain_template</property>
        <documentation>Name and location of the domain template from which you want to create a domain.</documentation>
        <required>1</required>
    </formElement>
    <formElement>
        <type>entry</type>
        <label>Domain Directory:</label>
        <property>domain_directory</property>
        <documentation>Name of the directory to which you want to write the domain configuration information. .</documentation>
        <required>1</required>
    </formElement>
    <formElement>
        <type>entry</type>
        <label>Listen Address:</label>
        <property>listen_address</property>
        <documentation>Server Listen Address.</documentation>
        <required>0</required>
    </formElement>
    <formElement>
        <type>entry</type>
        <label>Listen Port:</label>
        <property>listen_port</property>
        <documentation>Server Listen Port.</documentation>
        <required>0</required>
    </formElement>
</editor>
