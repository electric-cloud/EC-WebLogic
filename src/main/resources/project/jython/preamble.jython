def getJMSResource(name):
    if isEmpty(name):
        raise Exception("No JMS Module Name is provided")
    mbean = getMBean('/JMSSystemResources/%s' % name)
    if mbean == None:
        return None
    else:
        print_debug("Got JMS Bean %s" % mbean)
        return mbean.getJMSResource()

